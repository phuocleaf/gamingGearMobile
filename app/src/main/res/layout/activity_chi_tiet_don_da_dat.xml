<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".ui.ChiTietDonDaDatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_gravity="center"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Chi tiết đơn hàng"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- Thông tin khách hàng -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên: Nguyễn Tấn Phước"
            android:textSize="20sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:"
            android:textSize="20sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- RecyclerView hiển thị danh sách sản phẩm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewClothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian đặt: 26-04-2024 18:26:33"
            android:textSize="20sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú: giao ngoài giờ hành chánh"
            android:textSize="20sp"
            android:padding="8dp" />

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textSize="20sp"
            android:padding="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:text="Huỷ đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
